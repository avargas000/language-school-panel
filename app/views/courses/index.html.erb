<div class="table">
    <h1> This Is The Course Webpage</h1>




        <br>
    <%= form_for @new_course, html: {class: "course_form"} do |f| %>

<div class="ui form">
  <div class="two fields">

      <div class="field">
      <label>Course name</label>
     <%= f.text_field :course_name %>
     </div>

    <div class="field">
      <label>Course Lenght</label>
        <%= f.text_field :hours %>
         </div>

  </div>
</div>
<%= f.submit "Create",  class: "ui green button"%>
    <% end %>



    <table class="ui celled table" >
    <thead>
        <tr><th>Name</th>
        <th>Hours</th>
        <th>Delete</th>
        <th>Edit</th>

    </tr></thead>
    <tbody>
    <% @course.each do |course| %>
        <tr>
        <td data-label="Name"> <%= course.course_name %></td>
        <td data-label="Age"> <%= course.hours%> </td>

        <td data-label="Job"><%= link_to "DELETE", '/courses/' + course.id.to_s, method: :delete, class: "ui red button" %></td>


        <td data-label="Job"> <%= link_to  "EDIT", edit_course_path(course), class:"ui orange button" %></td>
        </tr>

        <% end %>
    </tbody>
    </table>
</div>
