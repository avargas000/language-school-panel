<h1> This is Where You Edit Your Courses</h1>



    <br>
    <br>

    <%= form_for @course, html: {class: "course_form"} do |f| %>

<div class="ui form">
  <div class="two fields">

      <div class="field">
      <label>Course name</label>
     <%= f.text_field :course_name %>
     </div>

    <div class="field">
      <label>Course Lenght</label>
        <%= f.text_field :hours %>
         </div>

  </div>
</div>
<%= f.submit "Update",  class: "ui blue button"%>
    <% end %>

